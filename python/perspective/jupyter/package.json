{
  "private": true,
  "name": "@finos/perspective-jupyter",
  "version": "1.3.11",
  "main": "lib/index.js",
  "scripts": {
    "build:labextension": "jupyter labextension build .",
    "build:lib": "babel src/ --source-maps --out-dir lib/",
    "build:nbextension": "webpack --mode=production -c webpack.config.js",
    "build": "npm-run-all build:*",
    "clean": "npm run clean:lib && npm run clean:nbextension",
    "clean:lib": "rimraf lib",
    "clean:labextension": "rimraf ../perspective/labextension",
    "clean:nbextension": "rimraf ../perspective/nbextension/index.js"
  },
  "jupyterlab": {
    "extension": true,
    "outputDir": "../perspective/labextension",
    "webpackConfig": "jupyter/webpack.config.js",
    "discovery": {
      "server": {
        "base": {
          "name": "perspective-python"
        },
        "managers": [
          "pip"
        ]
      }
    }
  },
  "nohoist": [
    "**"
  ],
  "dependencies": {
    "@jupyter-widgets/base": "^4.1.0",
    "@jupyterlab/application": "^3.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.9",
    "@jupyterlab/builder": "^3.2.4",
    "css-loader": "^6.2.0",
    "npm-run-all": "^4.1.3",
    "path-browserify": "^1.0.1",
    "rimraf": "^3.0.2",
    "source-map-loader": "^3.0.0",
    "style-loader": "^3.2.1",
    "svg-inline-loader": "^0.8.2",
    "webpack": "^5.52.1",
    "webpack-cli": "^4.8.0"
  }
}
